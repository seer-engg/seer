# ============================================================================
# Seer Platform - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================================================
# LangGraph API Configuration (Required for Railway/Production)
# ============================================================================

# Postgres connection string for checkpoints and thread persistence
# Format: postgresql://user:password@host:port/database
# For Railway: Use the DATABASE_URL provided by Railway Postgres plugin, append /eval_agent
# Example: postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/eval_agent
DATABASE_URL=

# Optional: Redis connection string for async tasks
# Format: redis://user:password@host:port/db
# REDIS_URI=

# ============================================================================
# LLM & AI Services (Required)
# ============================================================================

# OpenAI API key for LLM calls and embeddings
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================================
# Pinecone Vector Search (Optional - if using tool search)
# ============================================================================

# Pinecone API key for semantic tool search
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=

# Pinecone index name for tool search
PINECONE_INDEX_NAME=

# ============================================================================
# Web Search & External APIs (Optional)
# ============================================================================

# Tavily API key for web search
# Get from: https://tavily.com/
TAVILY_API_KEY=

# GitHub token for sandbox provisioning and repo access
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=

# Context7 API key for MCP tools
# Get from: https://context7.com/
CONTEXT7_API_KEY=

# ============================================================================
# Neo4j Graph Database (Optional - for advanced features)
# ============================================================================

# Neo4j connection URI
# Format: bolt://host:port or neo4j://host:port
NEO4J_URI=bolt://localhost:7687

# Neo4j username
NEO4J_USERNAME=

# Neo4j password
NEO4J_PASSWORD=

# ============================================================================
# Asana Integration (Optional)
# ============================================================================

# Asana workspace ID
ASANA_WORKSPACE_ID=

# Asana team GID
ASANA_TEAM_GID=

# Asana project ID (for free plans without teams)
ASANA_PROJECT_ID=

# ============================================================================
# E2B Sandbox Configuration (Optional)
# ============================================================================

# E2B API key for sandbox provisioning
# Get from: https://e2b.dev/
E2B_API_KEY=

# E2B template alias for sandboxes
E2B_TEMPLATE_ALIAS=seer-base

# ============================================================================
# Evaluation Agent Configuration (Optional - defaults shown)
# ============================================================================

# Number of eval rounds per version
EVAL_N_ROUNDS=2

# Number of test cases to generate per round
EVAL_N_TEST_CASES=1

# Total versions of target agent to evaluate
EVAL_N_VERSIONS=2

# Minimum score to pass evaluation (0.0 to 1.0)
EVAL_PASS_THRESHOLD=0.8

# Architecture for eval agent reflect node: 'react' or 'reflexion'
EVAL_AGENT_ARCHITECTURE=reflexion

# Reasoning effort for eval agent planning: 'minimal', 'medium', or 'high'
EVAL_REASONING_EFFORT=medium

# Enable handoff to codex agent
CODEX_HANDOFF_ENABLED=true

# ============================================================================
# Codex Agent Configuration (Optional - defaults shown)
# ============================================================================

# Reasoning effort for Codex developer node: 'minimal', 'medium', or 'high'
CODEX_REASONING_EFFORT=high

# Allow PR creation even if eval fails
ALLOW_PR=true

# ============================================================================
# Target Agent Configuration (Optional - defaults shown)
# ============================================================================

# Port for target agent
TARGET_AGENT_PORT=2024

# Setup script for target agent
TARGET_AGENT_SETUP_SCRIPT=pip install -e .

# Command to run target agent
TARGET_AGENT_COMMAND=langgraph dev --host 0.0.0.0

# Context level for target agent messages: 0=minimal, 1=system_goal, 2=system_goal+action, 3=full_context
TARGET_AGENT_CONTEXT_LEVEL=0

# ============================================================================
# User & GitHub Configuration (Optional)
# ============================================================================

# User ID for tracking
USER_ID=

# GitHub default owner for repos
GITHUB_DEFAULT_OWNER=

# GitHub default repo name
GITHUB_DEFAULT_REPO=

# ============================================================================
# Feature Flags (Optional - defaults shown)
# ============================================================================

# Load default MCP services
EVAL_AGENT_LOAD_DEFAULT_MCPS=true

# Plan-only mode: skip execution, return after plan generation
EVAL_PLAN_ONLY_MODE=false

# Enable handoff to eval agent
EVAL_AGENT_HANDOFF_ENABLED=false
